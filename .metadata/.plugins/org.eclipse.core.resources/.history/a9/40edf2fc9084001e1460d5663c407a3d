package interfaces;

import java.awt.EventQueue;
import java.awt.Graphics2D;
import java.awt.SplashScreen;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Timer;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.LineBorder;
import java.awt.BorderLayout;
import java.awt.Color;
import javax.swing.JProgressBar;

public class Pantalla_de_Carga extends JFrame {

	private static final long serialVersionUID = 1L;
	private JPanel contentPane;
	private JProgressBar progressBar;
	
	private static SplashScreen splash;
    private static Graphics2D splashGraphics;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					
					showSplashScreen();
			        
			        // Aquí se pueden realizar tareas de inicialización de la aplicación.
			        // Por ejemplo, cargar recursos, configurar conexiones, etc.
			        
			        // Simulamos la carga de la aplicación con un retardo.
			        simulateLoading();
			        
			        // Después de que la aplicación ha cargado, ocultamos la pantalla de carga.
			        hideSplashScreen();
			        
			        // Aquí se inicia la aplicación principal.
			        // Puedes poner tu código de inicio de la aplicación aquí.
			        // Por ejemplo: new MiVentanaPrincipal().setVisible(true);
					Menu_Principal mp = new Menu_Principal();
					mp.setLocationRelativeTo(null);
					mp.setVisible(true);
					//Pantalla_de_Carga frame = new Pantalla_de_Carga();
					//frame.setVisible(true);
					
					
					
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public Pantalla_de_Carga() {
		setUndecorated(true);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 863, 491);
		contentPane = new JPanel();
		contentPane.setBorder(new LineBorder(new Color(0, 0, 0), 2));
		
		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		progressBar = new JProgressBar(0, 100);
		progressBar.setBounds(10, 440, 843, 40);
        progressBar.setStringPainted(true);
		contentPane.add(progressBar);
		
		
    }
	
	
	private static void showSplashScreen() {
        splash = SplashScreen.getSplashScreen();
        if (splash == null) {
            System.out.println("SplashScreen not supported");
            return;
        }

        splashGraphics = splash.createGraphics();
        if (splashGraphics == null) {
            System.out.println("Unable to get splash graphics");
            return;
        }

        // Puedes personalizar la apariencia de tu pantalla de carga aquí.
        // Por ejemplo, dibujar un fondo, un logo, etc.
        splashGraphics.setColor(Color.BLACK);
        splashGraphics.fillRect(0, 0, 300, 300);
        splash.update();
    }

    private static void simulateLoading() {
        try {
            Thread.sleep(3000); // Simula una carga de 3 segundos
        } catch (InterruptedException e) {
            e.printStackTrace();
        }
    }

    private static void hideSplashScreen() {
        if (splash != null) {
            splash.close();
        }
    }
	
}
